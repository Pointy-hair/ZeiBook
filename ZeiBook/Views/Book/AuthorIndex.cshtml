@model AuthorIndexViewModel
@{
    ViewBag.Title = Model.Author.Name;
}

@await Component.InvokeAsync("Category")
<div class="row">
    <div class="col-md-9">
        <h5>@ViewBag.Title</h5>
        @Html.Partial("_bookList", Model.Books)
        @Html.Partial("_Page", Model.PageOption)
    </div>
    <div class="col-md-3">
        @await Component.InvokeAsync("Rank", new {  authorId = Model.Author.Id })
    </div>
</div>

