@model IEnumerable<BookRank>

@{ 
    ViewBag.Title = "Index";
}

<h2>Books</h2>

<p>
    <a asp-action="Create">添加</a>
</p>
<div>
    <table class="table-responsive table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CornValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interval)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnableTask)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CornValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interval)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnableTask)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
