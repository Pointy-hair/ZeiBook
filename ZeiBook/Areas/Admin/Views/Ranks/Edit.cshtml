                <input asp-for="Interval" class="form-control"/>
                <span asp-validation-for="Interval" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="CornValue"></label>
            <div class="col-sm-10">
                <input asp-for="CornValue" class="form-control"/>
                <span asp-validation-for="CornValue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="EnableTask"></label>
            <div class="col-sm-10">
                <input asp-for="EnableTask" type="checkbox" />
                <span asp-validation-for="EnableTask" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <input type="submit" value="修改" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
