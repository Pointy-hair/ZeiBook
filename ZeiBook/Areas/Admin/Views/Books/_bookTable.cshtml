@model Book
<table class="table-responsive">
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Name)
        </td>
        <td>
            <a asp-controller="Book" asp-area="" asp-action="Item" asp-route-id="@Model.Id" asp-route-pageNum="">@Html.DisplayFor(model => model.Name)</a>
        </td>
    </tr>
    <tr>
        <td>
            作者
        </td>
        <td>
            @{ var authorName = Model.Writer.Name;}
            <a asp-controller="Book" asp-area="" asp-action="AuthorIndex" asp-route-authorName="@authorName" asp-route-pageNum="">@Html.DisplayFor(model => authorName)</a>
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.UploadTime)
        </td>
        <td>
            @Html.DisplayFor(model => model.UploadTime)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Path)
        </td>
        <td>
            @Html.DisplayFor(model => model.Path)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Description)
        </td>
        <td>
            @Html.Raw(Model.Description)
        </td>
    </tr>
    <tr>
        <td>
            下载数
        </td>
        <td>
            @Html.DisplayFor(model => model.DownloadTime)
        </td>
    </tr>
    <tr>
        <td>
            文件大小
        </td>
        <td>
            @Html.DisplayFileLength(Model.FileLength)
        </td>
    </tr>
    <tr>
        <td>
            封面
        </td>
        <td>
            @if (Model.CoverPath != null)
            {
                <img src="@Model.CoverPath" />
            }
        </td>
    </tr>
</table>